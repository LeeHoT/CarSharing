	<bean id="registerService" class="com.sharing.service.impl.RegisterServiceImpl"></bean>

	<bean id="addressService" class="com.sharing.service.impl.AddressServiceImpl"></bean>

	<bean id="joinDetailService" class="com.sharing.service.impl.JoinDetailServiceImpl"></bean>

	<bean id="updateIconService" class="com.sharing.service.impl.UpdateIconServiceImpl"></bean>

	<bean id="groupService" class="com.sharing.service.impl.GroupServiceImpl"></bean>

	<!-- Dao bean -->
	<bean id="loginDao" class="com.sharing.dao.impl.LoginDaoImpl"></bean>

	<bean id="registerDao" class="com.sharing.dao.impl.RegisterDaoImpl"></bean>

	<bean id="addressDao" class="com.sharing.dao.impl.AddressDaoImpl"></bean>

	<bean id="joinDetailDao" class="com.sharing.dao.impl.JoinDetaliDaoImpl"></bean>

	<bean id="updateIconDao" class="com.sharing.dao.impl.UpdateIconDaoImpl"></bean>

	<bean id="groupDao" class="com.sharing.dao.impl.GroupDaoImpl"></bean>

	<bean id="group" class="com.sharing.entities.Groups"></bean>
